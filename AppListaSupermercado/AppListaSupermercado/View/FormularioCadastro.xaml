<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppListaSupermercado.View.FormularioCadastro">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Código:" />
            <Label x:Name="lbl_id" Text="{ Binding Id }" />
            
            <Label Text="Nome do Produto:" />
            <Entry x:Name="txt_name" Text="{ Binding Nome}"/>
            
            <Label Text="Quantidade" />
            <Entry x:Name="txt_quant" Text="{Binding Quantidade}"/>
            
            <Label Text="Preço Estimado" />
            <Entry x:Name="txt_precoEstim" Text="{Binding PrecoEstimado}"/>

            <Label Text="Preço Pago" />
            <Entry x:Name="txt_precoPago" Text="{Binding PrecoPago}"/>

            <Button Text="Salvar" Clicked="Button_Clicked_1"/>
            <Button Text="Voltar" 
                    HorizontalOptions="CenterAndExpand"
                    TextColor="White"
                    BackgroundColor="DarkRed"
                    Margin="70"
                    Clicked="Button_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>